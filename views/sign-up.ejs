<div class="row mt-5">
  <div class="col-md-6 m-auto">

    <h1 class="display-5 fw-bold text-center">Sign up</h1>
    <br>
    <%- include ("./messages"); %>
    <form action="/users/sign-up" method="POST">

      <div class="form-group">
        <label for="name">Name</label>
        <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
          value="<%= typeof name != 'undefined' ? name : '' %>" />
      </div>

      <br>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
          value="<%= typeof email != 'undefined' ? email : '' %>" />
      </div>

      <br>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
          value="<%= typeof password != 'undefined' ? password : '' %>" />
      </div>

      <br>
      <div class="form-group">
        <label for="password2">Confirm Password</label>
        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
          value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
      </div>

      <br>
      <button type="sign-up" class="btn btn-primary btn-dark">
        Sign up
      </button>

    </form>

    <p class="lead mt-4">Have an account?&nbsp;<a href="/users/log-in">Log in</a></p>

  </div>
</div>
