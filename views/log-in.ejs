<!-- Message -->
<br>
<h1 class="display-5 fw-bold text-center">Log in</h1>
<%- include ("./messages"); %>
<br>
<br>

<!-- Log in form -->
<div class="row justify-content-center">
  <div class="col-8 text-center">

    <!-- Google, Facebook and Github authentication -->
    <div class="form-group">
      <a class="google-btn" href=""><i class="fa-brands fa-google"></i>&nbsp;&nbsp;&nbsp;Log in with
        Google</a>&nbsp;&nbsp;
      <a class="facebook-btn" href=""><i class="fa-brands fa-facebook-f"></i>&nbsp;&nbsp;&nbsp;Log in with
        Facebook</a>&nbsp;&nbsp;&nbsp;
      <a class="github-btn" href=""><i class="fa-brands fa-github"></i>&nbsp;&nbsp;&nbsp;Log in with Github</a>
    </div>

  </div>
</div>

<div class="row mt-5">
  <div class="col-md-6 m-auto">

    <form action="/users/log-in" method="POST"></form>

    <!-- Username -->
    <div class="form-group">
      <label for="username">Username / Email</label>
      <input type="username" name="username" id="username" class="form-control" placeholder="Enter Username" />
    </div>

    <!-- Password -->
    <br>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password"/>
    </div>
    <br>

    <!-- Log in button -->
    <div class="form-group">
      <button type="log-in" class="btn btn-primary btn-dark">
        Log In
      </button>
    </div>

    </form>

  </div>
</div>
