<!-- Homepage -->
<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <!-- Image -->
  <div class="col-12 col-lg-6">
    <img
      src="/img/food-mugshot.jpeg"
      width="600"
      class="d-block mx-lg-auto img-fluid"
      Loading="lazy"
      alt="Cooking With Node.js"
    />
  </div>

  <div class="col-12 col-lg-6">
    <!-- Description -->
    <h1 class="display-5 fw-bold mb-3">Welcome to Hungry Beast</h1>
    <p class="lead">Explore a range of tasty recipes from around the world.</p>

    <!-- Buttons for 'Latest recipes' and 'Generate a random recipe' -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a
        href="/explore-latest"
        class="btn btn-primary btn-dark btn-lg px-4 me-md-2"
        >Latest recipes</a
      >
      <a
        href="/explore-random"
        class="btn btn-outline-secondary btn-lg px-4 me-md-2"
        >Generate a random recipe</a
      >
    </div>
  </div>
</div>

<!-- Categories of recipes start -->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if(categories != '' ) { %> <% categories.forEach(function(category, index)
  { %>
  <a
    href="/categories/<%- category.name %>"
    class="col text-center category__link"
  >
    <div class="category__img shadow">
      <img
        src="img/<%- category.image %>"
        alt="<%- category.name %>"
        Loading="lazy"
      />
    </div>
    <div class="pt-1"><%- category.name %></div>
  </a>
  <% })%> <% } %>

  <a href="/categories" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="img/view-all.jpeg" alt="View All Categories" Loading="lazy" />
    </div>
    <div class="pt-1">View All</div>
  </a>
</div>
<!-- Categories of recipes end -->

<!-- Latest recipes start -->
<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest recipes</h2>
    <a href="/explore-latest" class="ms-auto">View more</a>
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(recipes.latest && recipes.latest.length > 0) { %> <%
    recipes.latest.forEach(function(recipe, index){ %>
    <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
      <div class="category__img">
        <img
          src="<%= recipe.image %>"
          alt="<%= recipe.name %>"
          Loading="lazy"
        />
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <%}) %> <% } else { %>
    <p>No items found.</p>
    <% } %>
  </div>
</section>
<!-- Latest recipes end -->

