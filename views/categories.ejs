<h1 class="pb-4">Explore categories</h1>

<!-- Breadcrumb markup -->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      Explore categories
    </li>
  </ol>
</nav>

<!-- Categories of recipes page -->
<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
  <% if(typeof categories !=='undefined' && categories.length> 0) { %> <%
  categories.forEach(function(category, index) { %>
  <!-- Recipe name -->
  <a
    href="/categories/<%- category.name %>"
    class="col text-center category__link"
  >
    <!-- Recipe image and name -->
    <div class="category__img shadow">
      <img
        src="img/<%- category.image %>"
        alt="<%- category.name %>"
        Loading="lazy"
      />
    </div>
    <div class="pt-1"><%- category.name %></div>
  </a>
  <% })%> <% } %>
</div>

<!-- Recipe page attached to a specific category -->
<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(typeof categoryById !=='undefined' && categoryById.length> 0) { %> <%
  categoryById.forEach(function(recipe, index){ %>
  <!-- Recipe id -->
  <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
    <div class="category__img">
      <!-- Recipe image and name -->
      <img src="<%= recipe.image %>" alt="<%= recipe.name %>" Loading="lazy" />
    </div>
    <div class="pt-1"><%= recipe.name %></div>
  </a>
  <%}) %> <% } %>
</div>
