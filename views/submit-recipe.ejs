<!-- Submit recipe page -->
<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit your recipes!</h1>
</div>

<div class="row justify-content-center">
  <!-- Submit success alert -->
  <% if(infoSubmitObj != '') { %>
  <div class="col-8 alert alert-success" role="alert"><%= infoSubmitObj %></div>
  <% } %>

  <!-- Submit failure alert -->
  <% if(infoErrorsObj != '') { %>
  <div class="col-8 alert alert-danger" role="alert"><%= infoErrorsObj %></div>
  <% } %>

  <!-- Submit recipe form -->
  <div class="col-8">
    <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
      <div class="row g-3">
        <!-- Email -->
        <div class="col-12">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" class="form-control" />
        </div>

        <!-- Recipe's name -->
        <div class="col-12">
          <label for="name" class="form-label">Recipe's title</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control"
            required
          />
        </div>

        <!-- Description -->
        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            id="description"
            class="form-control"
            cols="30"
            rows="4"
          ></textarea>
        </div>

        <!-- Instructions -->
        <div class="col-12">
          <label for="instructions" class="form-label">Instructions</label
          ><br />
          <div class="instructionsList">
            <div class="instructionsDiv mb-1">
              <input type="text" name="instructions[]" class="form-control" />
            </div>
          </div>
        </div>

        <!-- Button for adding fields for instructions -->
        <div class="col-12">
          <button
            type="button"
            class="btn btn-outline-secondary"
            id="addInstructionsBtn"
          >
            + Instructions
          </button>
        </div>

        <!-- Ingredients -->
        <div class="col-12">
          <label for="name" class="form-label">Ingredients</label><br />
          <small>E.g. Onion</small>
          <div class="ingredientList">
            <div class="ingredientDiv mb-1">
              <input type="text" name="ingredients[]" class="form-control" />
            </div>
          </div>
        </div>

        <!-- Button for adding fields for ingredients -->
        <div class="col-12">
          <button
            type="button"
            class="btn btn-outline-secondary"
            id="addIngredientsBtn"
          >
            + Ingredients
          </button>
        </div>

        <!-- Select category -->
        <div class="col-12">
          <label for="category">Select category</label>
          <select
            class="form-select form-control"
            name="category"
            aria-label="Category"
          >
            <option selected>Select category</option>
            <option value="Asian">Asian</option>
            <option value="Australian and New Zealander">
              Australian and New Zealander
            </option>
            <option value="European">European</option>
            <option value="Middle Eastern">Middle Eastern</option>
            <option value="North American">North American</option>
            <option value="South American">South American</option>
          </select>
        </div>

        <!-- Image upload -->
        <div class="col-12">
          <label for="image">Image</label>
          <input
            id="image"
            type="file"
            class="form-control"
            name="image"
            accept="image/*"
          />
        </div>

        <!-- Submit recipe button -->
        <div class="col-12">
          <button type="submit" class="btn btn-primary btn-dark">
            Submit recipe
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
